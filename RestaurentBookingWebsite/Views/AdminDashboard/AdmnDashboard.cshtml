@model List<RestaurentBookingWebsite.DbModels.Booking>

@{
    ViewData["Title"] = "AdmnDashboard";
}

<head>
    <!-- Include Font Awesome -->
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0-beta3/css/all.min.css" />
    <!-- Your existing CSS here -->
</head>

<style >
      
 
    body {
        background: #fafafa url(https://wallpapercave.com/wp/wp3589952.jpg);
        color: #444;
        font: 100%/30px 'Helvetica Neue', helvetica, arial, sans-serif;
        text-shadow: 0 1px 0 #fff;
        background-size: cover;
        height: 100vh; 
        width: 100vw; 
        */ position: relative;
    }

  

    table {
        width: 100%;
        max-width: 1200px; 
        margin: 30px auto;
    }

   
    .table-container {
        overflow-x: auto; 
    }

  
    th {
        background: linear-gradient(#777, #444);
        border-left: 1px solid #555;
        border-right: 1px solid #777;
        border-top: 1px solid #555;
        border-bottom: 1px solid #333;
        box-shadow: inset 0 1px 0 #999;
        color: #fff;
        font-weight: bold;
        padding: 10px 15px;
        text-shadow: 0 1px 0 #000;
    }

  
    tr {
        background: #fafafa;
    }

        tr:nth-child(odd) td {
            background: #f1f1f1;
        }

    
    form {
        margin: 20px 0;
    }

    label {
        font-weight: bold;
        margin-bottom: 10px;
    }

    input[type="date"] {
        border: 1px solid #ddd;
        border-radius: 4px;
        padding: 6px;
    }

    input[type="submit"] {
        background-color: #007bff;
        border: none;
        border-radius: 4px;
        color: #fff;
        cursor: pointer;
        padding: 10px 15px;
        text-align: center;
        text-decoration: none;
        font-size: 14px;
    }

        input[type="submit"]:hover {
            background-color: #0056b3;
        }


    h3 {
        margin-top: 20px;
        font-size: 1.5rem;
    }

    h1 {
        font-size: 2rem;
        margin: 30px 0;
    }

    .center-text {
        text-align: center;
    }
    



    /
    .row {
        display: flex;
        align-items: center; 
        flex-wrap: wrap; 
        margin-bottom: 10px;
