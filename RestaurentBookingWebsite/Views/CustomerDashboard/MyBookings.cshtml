@model IEnumerable<RestaurentBookingWebsite.DbModels.Booking>

@{
    ViewData["Title"] = "MyBookings";
}

<style>
    table {
        width: 100%; /* Full width of the container */
        max-width: 1000px; /* Adjusted for better layout on larger screens */
        margin: 30px auto;
    }

    /* Adjusted styles for table headers */
    th {
        background: linear-gradient(#777, #444);
        border-left: 1px solid #555;
        border-right: 1px solid #777;
        border-top: 1px solid #555;
        border-bottom: 1px solid #333;
        box-shadow: inset 0 1px 0 #999;
        color: #fff;
        font-weight: bold;
        padding: 10px 15px;
        text-shadow: 0 1px 0 #000;
    }

    /* Improved table row styling */
    tr {
        background: #fafafa; /* Light background for table rows */
    }

        tr:nth-child(odd) td {
            background: #f1f1f1; /* Alternating row colors */
        }

    /* Button styling for action links */
    a {
        color: #007bff;
        text-decoration: none;
        font-weight: bold;
    }

        a:hover {
            text-decoration: underline;
        }

    /* Style for empty table cell */
    td:last-child {
        text-align: center; /* Center-align action links */
    }

    /* Make sure the last row has correct shadowing */
    tr:last-of-type td {
        box-shadow: inset 0 -1px 0 #fff;
    }

        tr:last-of-type td:first-child {
            box-shadow: inset 1px -1px 0 #fff;
        }

        tr:last-of-type td:last-child {
            box-shadow: inset -1px -1px 0 #fff;
        }

    /* Adjust styles for hover effect */
   /*  tbody:hover td {
        color: transparent;
        text-shadow: 0 0 3px #aaa;
    }

    tbody:hover tr:hover td {
        color: #444;
        text-shadow: 0 1px 0 #fff;
    } */
</style>

<h1>MyBookings</h1>


<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.BookingDate)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.SlotTime)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Status)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.CreationTime)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.BookingId)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.BookingDate)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.SlotTime)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Status)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.CreationTime)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.BookingId)
            </td>
            <td>
                @if (item.Status == "booked")
                {
                    @if ((item.BookingDate - DateTime.Now).TotalHours >= 24)
                    {
                        <a asp-action="CancelBooking" method="post" asp-route-id="@item.BookingId">Cancel</a>
                    }
                }
            </td>
        </tr>
}
    </tbody>
</table>
@Html.ActionLink("Back to Customer Dashboard", "CustDashboard", new { id = TempData["CustomerId"] })
