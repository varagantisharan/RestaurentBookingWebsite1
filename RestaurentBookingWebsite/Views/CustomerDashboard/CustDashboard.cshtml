@model Entity_Layer.BookingsModel

@{
    ViewData["Title"] = "CustDashboard";
    string defaultDate = DateTime.Now.ToString("yyyy-MM-dd");
}

<style>
    /* Style for the form container */
    .row {
        margin: 20px 0;
    }

    .form-group {
        margin-bottom: 15px;
    }

    /* Style for form labels */
    label {
        font-weight: bold;
        display: block;
        margin-bottom: 5px;
    }

    /* Style for form inputs */
    input[type="date"], select {
        border: 1px solid #ddd;
        border-radius: 4px;
        padding: 10px;
        width: 100%;
        box-sizing: border-box;
    }

    /* Style for form buttons */
    input[type="submit"] {
        background-color: #007bff;
        border: none;
        border-radius: 4px;
        color: #fff;
        cursor: pointer;
        padding: 10px 15px;
        text-align: center;
        font-size: 14px;
    }

        input[type="submit"]:hover {
            background-color: #0056b3;
        }

    /* Style for action links */
    a {
        color: #007bff;
        text-decoration: none;
        font-weight: bold;
    }

        a:hover {
            text-decoration: underline;
        }

    /* Update for the table to be consistent with the rest of the styles */
    table {
        width: 100%; /* Full width for better responsiveness */
        max-width: 1000px; /* Adjusted for larger screens */
        margin: 30px auto;
    }

    /* Keep the existing styles for table headers */
    th {
        background: linear-gradient(#777, #444);
        border-left: 1px solid #555;
        border-right: 1px solid #777;
        border-top: 1px solid #555;
        border-bottom: 1px solid #333;
        box-shadow: inset 0 1px 0 #999;
        color: #fff;
        font-weight: bold;
        padding: 10px 15px;
        text-shadow: 0 1px 0 #000;
    }

    /* Keep the existing styles for table rows */
    tr {
        background: #fafafa; /* Light background for table rows */
    }

        tr:nth-child(odd) td {
            background: #f1f1f1; /* Alternating row colors */
        }

        /* Ensure the last row's shadow is consistent */
        tr:last-of-type td {
            box-shadow: inset 0 -1px 0 #fff;
        }

            tr:last-of-type td:first-child {
                box-shadow: inset 1px -1px 0 #fff;
            }

            tr:last-of-type td:last-child {
                box-shadow: inset -1px -1px 0 #fff;
            }

    /* Hover effects for table rows */
    tbody:hover td {
        color: transparent;
        text-shadow: 0 0 3px #aaa;
    }

    tbody:hover tr:hover td {
        color: #444;
        text-shadow: 0 1px 0 #fff;
    }

    .center-container {
        display: flex;
        justify-content: center; /* Center horizontally */
        align-items: center; /* Center vertically */
        min-height: 50vh; /* Full viewport height */
        padding: 20px; /* Optional: add some padding around */
        box-sizing: border-box; /* Include padding in width/height calculations */
    }

    /* Style for forms and content within the container */
    .content {
        max-width: 800px; /* Maximum width for the content */
        width: 300%; /* Full width up to the maximum */
    }

    .top-right {
        position: absolute;
        top: 0;
        right: 0;
        padding: 10px;
        /*  background-color: #f8f9fa; */
        border-bottom-left-radius: 5px;
    }



</style>

<div class="center-container">
    <div class="content">
