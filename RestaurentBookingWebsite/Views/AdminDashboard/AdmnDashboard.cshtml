    .export-link {
        display: inline-flex; 
        align-items: center; 
        text-decoration: none; 
        color: #007bff; 
        font-size: 16px; 
        margin-top: 0; 
    }

    .export-link i {
        margin-left: 8px;
        font-size: 15px; 
    }

    .export-link:hover {
        color: #0056b3; 
        text-decoration: underline; 
    }

    .col-sm-2, .col-sm-4 {
        margin-bottom: 10px;
    }

    .top-right {
        position: absolute;
        top: 0;
        right: 0;
        padding: 10px;
