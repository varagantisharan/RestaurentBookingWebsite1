    /* Add a background image to the body */

    table {
        width: 100%;
        max-width: 1200px; /* Adjusted for wider screens */
        margin: 30px auto;
    }

    /* Ensure tables are responsive and scrollable */
    .table-container {
        overflow-x: auto; /* For horizontal scrolling on small screens */
    }

    /* Style for headers */
    th {
        background: linear-gradient(#777, #444);
        border-left: 1px solid #555;
        border-right: 1px solid #777;
        border-top: 1px solid #555;
        border-bottom: 1px solid #333;
        box-shadow: inset 0 1px 0 #999;
        color: #fff;
        font-weight: bold;
        padding: 10px 15px;
        text-shadow: 0 1px 0 #000;
    }

    /* Style for table rows */
    tr {
        background: #fafafa;
    }

        tr:nth-child(odd) td {
            background: #f1f1f1;
        }

    /* Style for form elements */
    form {
        margin: 20px 0;
    }

    label {
        font-weight: bold;
        margin-bottom: 10px;
    }

    input[type="date"] {
        border: 1px solid #ddd;
        border-radius: 4px;
        padding: 6px;
    }

    input[type="submit"] {
        background-color: #007bff;
        border: none;
        border-radius: 4px;
        color: #fff;
        cursor: pointer;
        padding: 10px 15px;
        text-align: center;
        text-decoration: none;
        font-size: 14px;
    }

        input[type="submit"]:hover {
            background-color: #0056b3;
        }

    /* Style for headings */
    h3 {
        margin-top: 20px;
        font-size: 1.5rem;
    }

    h1 {
        font-size: 2rem;
        margin: 30px 0;
    }

    .center-text {
        text-align: center;
    }
    



    /* Ensures all form elements align properly */
    .row {
        display: flex;
        align-items: center; /* Aligns items vertically */
        flex-wrap: wrap; /* Allows items to wrap if necessary */
        margin-bottom: 10px;
    }

    /* Adjusts the download link appearance */
    .export-link {
        display: inline-flex; /* Aligns the icon and text horizontally */
        align-items: center; /* Vertically centers the icon and text */
        text-decoration: none; /* Removes underline from the link */
        color: #007bff; /* Link color */
        font-size: 16px; /* Adjusts font size */
        margin-top: 0; /* Ensures no extra space above the link */
    }

    .export-link i {
        margin-left: 8px; /* Space between the icon and text */
        font-size: 15px; /* Icon size */
    }

    .export-link:hover {
        color: #0056b3; /* Changes color on hover */
        text-decoration: underline; /* Adds underline on hover */
    }

    .col-sm-2, .col-sm-4 {
        margin-bottom: 10px;
    }

    .top-right {
        position: absolute;
        top: 0;
        right: 0;
        padding: 10px;
       /*  background-color: #f8f9fa; */
        border-bottom-left-radius: 5px;
    }

</style>


<div class="top-right">
 <h3> @TempData["UserName"]</h3>
</div>

    <h5 class="center-text">LAST SEVEN DAYS REGISTRATION</h5>
