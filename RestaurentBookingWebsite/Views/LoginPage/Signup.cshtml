 @Html.ValidationSummary(true, "", new { @class = "text-danger" }) 
`
<div class="row">
    <div class="col-md-4">
        <form asp-action="Signup" method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>

            <div class="form-group-container">
                <div class="form-group">
                    <label asp-for="userid" class="control-label">UserId</label>
                    <input asp-for="userid" class="form-control custom-input" required  />
                    <span asp-validation-for="userid" class="text-danger"></span>
                </div>
                @if(ViewBag.Message != null)
                {
                    <p class="text-danger">@ViewBag.Message</p>
                }
            
            </div>

            <div class="form-group-container">
                <div class="form-group">
                    <label asp-for="first_name" class="control-label" >First Name</label>
                    <input asp-for="first_name" class="form-control custom-input"  required   />
                    <span asp-validation-for="first_name" class="text-danger"></span>
                    @* @Html.ValidationMessageFor(model => model.first_name, "", new { @class = "text-danger" }) *@
                </div>
            </div>

            <div class="form-group-container">
                <div class="form-group">
                    <label asp-for="last_name" class="control-label">Last Name</label>
                    <input asp-for="last_name" class="form-control custom-input" required />
                    <span asp-validation-for="last_name" class="text-danger"></span>
                </div>
            </div>

            <div class="form-group-container">
                <div class="form-group">
                    <label asp-for="password" class="control-label">Password</label>
                    <input asp-for="password" type="password" class="form-control custom-input" required  />
                    <span asp-validation-for="password" class="text-danger"></span>
                </div>
            </div>

            <div class="form-group-container">
                <div class="form-group">
                    <label asp-for="confirm_password" class="control-label">Confirm Password</label>
                    <input asp-for="confirm_password" type="password" class="form-control custom-input"  required  />
                    <span asp-validation-for="confirm_password" class="text-danger"></span>
                </div>
            </div>

            <div class="form-group-container">
                <div class="form-group">
                    <label asp-for="email" class="control-label">Email</label>
                    <input asp-for="email" type="email" class="form-control custom-input" required  />
                    <span asp-validation-for="email" class="text-danger"></span>
                </div>
            </div>

            <div class="form-group-container">
                <div class="form-group">
                    <label asp-for="address" class="control-label">Address</label>
                    <input asp-for="address" class="form-control custom-input"  required  />
                    <span asp-validation-for="address" class="text-danger"></span>
                </div>
            </div>

            <div class="form-group-container">
                <div class="form-group">
                    <label asp-for="phone_number" class="control-label">Phone Number</label>
                    <input asp-for="phone_number" type="tel" class="form-control custom-input" required pattern="[0-9]{10}      />
                    <span asp-validation-for="phone_number" class="text-danger"></span>
                </div>
            </div>

            <div class="form-group-container">
                <div class="form-group">
                    <label asp-for="Role" class="control-label">Role</label>
                   @*  <input asp-for="Role" class="form-control" /> *@
                    <select asp-for="Role"  class="form-control custom-input" required  >
                        <option value="Admin">Admin</option>
                        <option value="Customer">Customer</option>
                    </select>
                </div>
            </div>

            <div class="form-group-container">
                <div class="form-group">
                    <input type="submit" value="Submit" class="btn btn-primary" />
                </div>
            </div>

        </form>
    </div>
</div>

