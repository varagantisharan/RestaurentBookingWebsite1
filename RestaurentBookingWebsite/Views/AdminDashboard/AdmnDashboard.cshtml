    a {
    color:#0000ff ;
    text-decoration: underline;
}
</style>


<div class="top-right">
 <h3> @TempData["UserName"]</h3>
</div>

    <h5 class="center-text">LAST SEVEN DAYS REGISTRATION</h5>
    <table class="table">
        <thead>
            
            <tr>
                <th>
                    Customer Id
                </th>
                <th>
                    First Name
                </th>
                <th>
                    Last Name
                </th>
                <th>
                    Address
                </th>
                <th>
                    Phone Number
                </th>
                <th>
                    Email
                </th>
                <th>
                    User Id
                </th>
                <th>
                    Date Of Registration
                </th>
            </tr>
        </thead>
        <tbody>
        @if (ViewBag.Customers != null)
        {
            @foreach (var item in ViewBag.Customers)
            {
                <tr>
                    <td>
                        @item.CustomerId
                    </td>
                    <td>
                        @item.FirstName
                    </td>
                    <td>
                        @item.LastName
                    </td>
                    <td>
                        @item.Address
                    </td>
                    <td>
                        @item.PhoneNumber
                    </td>
                    <td>
                        @item.Email
                    </td>
                    <td>
                        @item.UserId
                    </td>
                    <td>
                        @item.DateOfRegistration
                    </td>
                </tr>
            }
        }
        </tbody>
    </table>
<h5 class="center-text">UPCOMING THREE DAYS BOOKINGS</h5>
<table class="table">
    <thead>
        <tr>
            <th>
                Booking Date
            </th>
            <th>
                Slot Time
            </th>
            <th>
                Status
            </th>
            <th>
                Creation Time
            </th>
            <th>
                Booking Id
            </th>
        </tr>
    </thead>

    <tbody>
        @if (ViewBag.Bookings!=null)
        {       
            @foreach (var item in ViewBag.Bookings)
            {
                <tr>
                    <td>
                        @item.BookingDate
                    </td>
                    <td>
                        @item.SlotTime
                    </td>
                    <td>
                        @item.Status
                    </td>
                    <td>
                        @item.CreationTime
                    </td>
                    <td>
                        @item.BookingId
                    </td>

                </tr>
            }
        }
    </tbody>
   
</table>

@if (ViewBag.Cancellations != null)
{
    <h5 class="center-text">NEXT THREE DAYS CANCELLATIONS</h5>
    <table class="table">
        <thead>
            <tr>
                <th>
                    Booking Date
                </th>
                <th>
                    Slot Time
                </th>
                <th>
                    Status
                </th>
                <th>
                    Creation Time
                </th>
                <th>
                    Booking Id
                </th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in ViewBag.Cancellations)
            {
                <tr>
                    <td>
                        @item.BookingDate
                    </td>
                    <td>
                        @item.SlotTime
                    </td>
                    <td>
                        @item.Status
                    </td>
                    <td>
                        @item.CreationTime
                    </td>
                    <td>
                        @item.BookingId
                    </td>
                </tr>
            }
        </tbody>
    </table>
}


<div class="container">  
    @using (Html.BeginForm("AdmnDashboard", "AdminDashboard", FormMethod.Post))  
    {  
        <div class="row">  
            <div class="col-sm-2 text-lg-left">                
                <label>From Date</label>                
            </div>
            <div class="col-sm-2">               
                <input type="date" name="From" class="form-control" placeholder="Select Date" />
            </div>
            <div class="col-sm-2">
                <label>To Date</label>               
            </div>
            <div class="col-sm-2">
                <input type="date" name="To" class="form-control" placeholder="Select Date" />
            </div>           
            <div class="col-sm-2">
                <input type="submit" value="Search" class="btn btn-primary form-control" />
                
            </div>
            @if (ViewBag.ViewExcel == 1)
            {
                <div class="col-sm-2">
                    <a href="@Url.Action("ExportToExcel", "AdminDashboard")" class="export-link">
                        <i class="fas fa-download"></i>
                    </a>
                </div>
            }           
        </div>
        @if (ViewBag.DateRangeBookings != null)
        {
            <h5 class="center-text">BOOKINGS AS PER THE SELECTED FROM AND TO DATE</h5>
            <table class="table">
                <thead>
                    <tr>
                        <th>
                            Booking Date
                        </th>
                        <th>
                            Slot Time
                        </th>
                        <th>
                            Status
                        </th>
                        <th>
                            Creation Time
                        </th>
                        <th>
                            Booking Id
                        </th>
                    </tr>
                </thead>

                <tbody>
                    @foreach (var item in ViewBag.DateRangeBookings)
                    {
                        <tr>
                            <td>
                                @item.BookingDate
                            </td>
                            <td>
                                @item.SlotTime
                            </td>
                            <td>
                                @item.Status
                            </td>
                            <td>
                                @item.CreationTime
                            </td>
                            <td>
                                @item.BookingId
                            </td>
                        </tr>
                    }
                </tbody>

            </table>
        }
         
    }  
</div>  



